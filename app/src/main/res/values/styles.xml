<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Changes the text colour of the app bar -->
        <item name="android:textColorPrimary">#FFFFFF</item>

        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#ed1d24</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Question TextView text changed to the colour below -->
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Style for the Intro headings under the mcu3.jpg image -->
    <style name="IntroStyle">
        <item name="android:background">@color/intro_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name=" android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Style for the text views that show the question numbers e.g "1)" -->
    <style name="NumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for the text views that show the questions -->
    <style name="QuestionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">textStart</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for the radio group -->
    <style name="RadioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <!-- Style for the individual radio buttons -->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for checkboxes -->
    <style name="CheckBoxesStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for edit text view -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for view -->
    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">#000000</item>
    </style>

</resources>
